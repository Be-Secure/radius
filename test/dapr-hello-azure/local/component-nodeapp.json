{
    "kind": "radius.dev/Container@v1alpha1",
    "properties": {
        "run": {
            "container": {
                "image": "rynowak/dapr-hello-nodeapp:latest"
            }
        },
        "provides": [
            {
              "name": "public",
              "kind": "http",
              "containerPort": 3000
            }
        ],
        "dependsOn": [
            {
                "kind": "dapr.io/StateStore",
                "name": "statestore"
            }
        ],
        "traits": [
            {
                "kind": "dapr.io/App@v1alpha1",
                "properties": {
                    "appId": "nodeapp",
                    "appPort": 3000
                }
            },
            {
                "kind": "radius.dev/Ingress@v1alpha1",
                "properties": {
                    "hostname": "dapr-hello.demo.radapp.dev",
                    "service": "public"
                }
            }
        ]
    }
}